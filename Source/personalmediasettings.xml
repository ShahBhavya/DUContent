<?xml version="1.0" encoding="utf-8" ?>
<uidescription>
  <PersonalMediaSettingsPage class="Page.Animated" initialFocus="_saveButton">

    <Text class="Text.Clock">{Time}</Text>
    
    <Panel class="Panel" id="_settingsPanel">
      <Text class="Text.HeaderTitle" id="_header">#SettingsString</Text>
      <Text class="Text.SubheaderTitle">#Settings.General.PersonalMedia</Text>

      <VerticalFlowPanel class="VerticalFlowPanel.Menu.Settings">
        <Button class="Button.Vertical" onClick="OnClick_Save" id="_saveButton">#Settings.Save</Button>
        <Button class="Button.Vertical" onClick="OnClick_DontSave" id="_dontSaveButton">#Settings.DontSave</Button>
      </VerticalFlowPanel>

      <Panel class="Panel.PersonalMedia.Settings">
        <Checkbox class="Checkbox.PersonalMedia" id="_playToEnabled" onClick="OnClick_PlayToEnabled">
          #PersonalMedia.SettingsPage.Enable
        </Checkbox>
        <Checkbox class="Checkbox.PersonalMedia.RequireConfirmation" id="_requireConfirmation" onClick="OnClick_RequireConfirmation">
          #PersonalMedia.SettingsPage.Require
        </Checkbox>

        <Button id="_deviceNameButton" class="Button.PersonalMedia" href="TVReceiverName">
          #Settings.Television.TVReceiverName
        </Button>
      </Panel>      
    </Panel>
    
  </PersonalMediaSettingsPage>
</uidescription>