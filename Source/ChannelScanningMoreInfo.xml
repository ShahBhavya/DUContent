<?xml version="1.0" encoding="utf-8" ?>
<uidescription>
  <!-- uses standard class, there's no special code behind for this simple page, no need to retain in page stack -->
  <Page class="Page.Animated" excludefromhistory="true">

    <Text class="Text.HeaderTitle" id="_header">#SettingsString</Text>
    <Text class="Text.SubheaderTitle">#Settings.ChannelScanning.MoreInfo</Text>
    <Text class="Text.Clock">{Time}</Text>

    <VerticalFlowPanel class="VerticalFlowPanel.Menu.Settings">
      <Button class="Button.Vertical" href="action:back">#Done</Button>
    </VerticalFlowPanel>

    <VerticalFlowPanel class="VerticalFlowPanel.Content.Settings">
      <Text class="Text.SettingsSubtitle">#Settings.ChannelScanning.MoreInfo.Title</Text>
      <Text class="Text.SettingsDescription" id="_description">#Settings.ChannelScanning.MoreInfo.Description</Text>
    </VerticalFlowPanel>

  </Page>
</uidescription>