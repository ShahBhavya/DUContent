<?xml version="1.0" encoding="utf-8" ?>
<uidescription>
  <AudioLanguageSettingsPage class="Page.Animated" initialFocus="_saveButton">

    <Text class="Text.Clock">{Time}</Text>
    <Text class="Text.HeaderTitle" id="_header">#SettingsString</Text>
    <Text class="Text.SubheaderTitle">#Settings.AudioLanguage</Text>

    <VerticalFlowPanel class="VerticalFlowPanel.Menu.Settings">
      <Button class="Button.Vertical" onClick="OnClick_Save" id="_saveButton">#Settings.Save</Button>
      <Button class="Button.Vertical" onClick="OnClick_DontSave" id="_dontSaveButton">#Settings.DontSave</Button>
    </VerticalFlowPanel>

    <VerticalFlowPanel class="VerticalFlowPanel.Content.Settings">
      <Text class="Text.SettingsDescription">#Settings.AudioLanguage.Description</Text>
        <SimpleRadioList class="List.AudioLanguages" id="_list" listCounterId="_listCounter" />
      <Text class="Text.ListCounter.AudioLanguages" id="_listCounter" />
    </VerticalFlowPanel>

  </AudioLanguageSettingsPage>
</uidescription>