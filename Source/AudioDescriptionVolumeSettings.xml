<?xml version="1.0" encoding="utf-8" ?>
<uidescription>
	  <AudioDescriptionVolumeSettingsPage class="Page.Animated" initialFocus="_saveButton">

		    <Text class="Text.HeaderTitle" id="_header">#SettingsString</Text>
		    <Text class="Text.SubheaderTitle" id="_ccSubHeader">#Settings.AudioDescription.Volume.Heading</Text>
		    <Text class="Text.Clock">{Time}</Text>

		    <VerticalFlowPanel class="VerticalFlowPanel.Menu.Settings">
		        <Button class="Button.Vertical" onClick="OnClick_Save" id="_saveButton">#Settings.Save</Button>
		        <Button class="Button.Vertical" onClick="OnClick_DontSave" id="_dontSaveButton">#Settings.DontSave</Button>
		    </VerticalFlowPanel>

		    <VerticalFlowPanel class="VerticalFlowPanel.Content.Settings">
			      <Text class="Text.AudioDescriptionVolumeDescription" >#Settings.AudioDescription.Volume.Description</Text>
			      <List class="List.AudioDescriptionVolumeSettings" id="_list"/>
		    </VerticalFlowPanel>

    </AudioDescriptionVolumeSettingsPage>
</uidescription>