<?xml version="1.0" encoding="utf-8" ?>
<uidescription>
    <DigitalAudioOutputSettingsPage class="Page.Animated" initialFocus="_saveButton">
        <Text class="Text.Clock">{Time}</Text>
        <Text class="Text.HeaderTitle" id="_header">#SettingsString</Text>
        <Text class="Text.SubheaderTitle">#Settings.DigitalAudioOutput</Text>
        <VerticalFlowPanel class="VerticalFlowPanel.Menu.Settings">
            <Button class="Button.Vertical" onClick="OnClick_Save" id="_saveButton">#Settings.Save</Button>
            <Button class="Button.Vertical" onClick="OnClick_DontSave" id="_dontSaveButton">#Settings.DontSave</Button>
        </VerticalFlowPanel>

        <VerticalFlowPanel class="VerticalFlowPanel.Content.Settings">
          <Text class="Text.SettingsDescription" id="_description">#Settings.DigitalAudioOutput.Description</Text>
          <RadioButtonGroup class="RadioButtonGroup" id="_digitalAudioOutput">
                <RadioButton class="RadioButton.Spaced" id="_audioOutputStereoButton">#Settings.DigitalAudioOutput.Stereo</RadioButton>
                <RadioButton class="RadioButton.Spaced" id="_audioOutputSurroundButton">#Settings.DigitalAudioOutput.Surround</RadioButton>
            </RadioButtonGroup>
        </VerticalFlowPanel>
    </DigitalAudioOutputSettingsPage>
</uidescription>

