<?xml version="1.0" encoding="utf-8" ?>
<uidescription>
    <ParentalControl_ProtectVodPage class="Page.Animated" initialFocus="_protectVodOption">

        <Text class="Text.HeaderTitle" id="_header">#SettingsString</Text>
        <Text class="Text.SubheaderTitle">#ParentalControl.Settings.ProtectVod</Text>
        <Text class="Text.Clock">{Time}</Text>

        <VerticalFlowPanel class="VerticalFlowPanel.Menu.Settings">
            <Button class="Button.Vertical" id="_saveButton" onClick="OnClick_Save">#Settings.Save</Button>
            <Button class="Button.Vertical" id="_dontSaveButton" onClick="OnClick_DontSave">#Settings.DontSave</Button>
        </VerticalFlowPanel>

        <VerticalFlowPanel class="VerticalFlowPanel.Content.Settings.SingleCheckbox">
            <Checkbox class="Lockbox.Settings.ParentalControl" onClick="OnClick_ToggleLock" id="_protectVodOption">#ParentalControl.Settings.ProtectVod</Checkbox>
            <Text class="Text.LockAdultPrograms.Description" id="_description">#ParentalControl.Settings.ProtectVod.Description</Text>
        </VerticalFlowPanel>
    </ParentalControl_ProtectVodPage>
</uidescription>