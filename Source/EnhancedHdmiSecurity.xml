<?xml version="1.0" encoding="utf-8" ?>
<uidescription>
  <EnhancedHdmiSecuritySettingsPage class="Page.Animated" initialFocus="_saveButton">
    <Text class="Text.Clock">{Time}</Text>
    <Text class="Text.HeaderTitle" id="_header">#SettingsString</Text>
    <Text class="Text.SubheaderTitle">#Settings.EnhancedHdmiSecurity</Text>
    <VerticalFlowPanel class="VerticalFlowPanel.Menu.Settings">
      <Button class="Button.Vertical" onClick="OnClick_Save" id="_saveButton">#Settings.Save</Button>
      <Button class="Button.Vertical" onClick="OnClick_DontSave" id="_dontSaveButton">#Settings.DontSave</Button>
    </VerticalFlowPanel>

    <VerticalFlowPanel class="VerticalFlowPanel.Content.Settings">
      <Text class="Text.SettingsDescription">#Settings.EnhancedHdmiSecurity.Description</Text>
      <RadioButtonGroup id="_security" class="RadioButtonGroup">
        <RadioButton class="RadioButton.Spaced">#Settings.EnhancedHdmiSecurity.Enhanced</RadioButton>
        <RadioButton class="RadioButton.Spaced">#Settings.EnhancedHdmiSecurity.Standard</RadioButton>
      </RadioButtonGroup>
    </VerticalFlowPanel>
  </EnhancedHdmiSecuritySettingsPage>
</uidescription>