<?xml version="1.0" encoding="utf-8" ?>
<uidescription>
  <ChannelReorderingSettingsPage class="Page.Animated.ChannelReorderingSettings" initialFocus="_saveButton">
	 
		<Text class="Text.HeaderTitle" id="_header">#SettingsString</Text>
		<Text class="Text.SubheaderTitle">#Settings.ChannelReordering</Text>
		
		<VerticalFlowPanel class="VerticalFlowPanel.Menu.Settings">
			<Button class="Button.Vertical" onClick="OnClick_Save" id="_saveButton">#Settings.Save</Button>
			<Button class="Button.Vertical" onClick="OnClick_DontSave" id="_dontSaveButton">#Settings.DontSave</Button>
			<Button class="Button.Vertical" onClick="OnClick_RestoreDefault" id="_restoreDefaultButton">#Settings.ChannelReordering.RestoreDefault</Button>
		</VerticalFlowPanel>
		
		<Video class="Video.PIP.ProgramInfo" id="_pip" pipe="PIP" ispip="true" />
    <Image class="Image.Poster.PIP.ProgramInfo" id="_posterImageContainer" visible="false"/>

    <VerticalFlowPanel class="VerticalFlowPanel.Content">
      <Text class="Text.ChannelReorderDescription" >#Settings.ChannelReordering.Description</Text>
      <List class="List.ReorderedChannels" id="_list" />
    </VerticalFlowPanel>

    <EditText class="EditText.Channel.ChannelList.ChannelReordering" id="_jumpToChannel" maxChars="4" visible="false"/>

  </ChannelReorderingSettingsPage>
</uidescription>