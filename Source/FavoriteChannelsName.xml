<?xml version="1.0" encoding="utf-8" ?>
<uidescription>
  <FavoriteChannelsNamePage class="Page.Animated.FavoriteChannelsSettings" initialFocus="_continueButton">

    <Text class="Text.Clock">{Time}</Text>
    <Text class="Text.HeaderTitle" id="_header">#SettingsString</Text>
    <Text class="Text.SubheaderTitle">#Settings.FavoriteChannels.Name</Text>

    <VerticalFlowPanel class="VerticalFlowPanel.Menu.Settings">
      <Button class="Button.Vertical" onClick="OnClick_Save" id="_saveButton">#Settings.Save</Button>
      <Button class="Button.Vertical" onClick="OnClick_DontSave" id="_dontSaveButton">#Settings.DontSave</Button>
    </VerticalFlowPanel>

    <Panel class="Panel.FavoriteChannelsNamePage">
      <EditText class="EditText.FavoriteChannels.ListName" id="_listNameEditText" inputmethod="keyboard" canfocus="false" maxchars="20" />
      <Keyboard class="VerticalFlowPanel.Keyboard.FavoriteChannelsName" id="_keyboard"/>

      <Text class="Text.FavoriteChannelsListName.Instructions" id="_instructions">#Settings.FavoriteChannels.Name.Instructions</Text>
    </Panel>

  </FavoriteChannelsNamePage>
</uidescription>